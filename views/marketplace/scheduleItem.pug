extends ../layout

block content
  .page-header
    h3 #{title} #{item.title}
   
  .panel.panel-default(style='background-color: lightblue;height:455px;')
     .panel-body
       .row
        .col-sm-6
         img(id=item.itemId,src='data:image/jpeg;base64,' + item.image[0], height=200, style='height:423px;width:500px;')
        .col-sm-12
        h1
         | <b>Enter your pick up information: </b>
        label(for='pickupLocation') Pickup Location:    
        <br>
         input(style='font-size:20px;font-weight:bold',type='text', name='pickupLocation', value='', placeholder='Your Address')
        <br>  
        <br>
        label(for='pickupDate') Pickup Date & Time:  
        <br>
         input(style='font-size:20px;font-weight:bold',type='text', name='pickupDate', value='10/04/2016 1:30 PM')  
        <br>  
        <br>
        a.btn.btn-primary(href='/transactions/confirmPickup/' + item.itemId,data-transition='fade', data-theme='c', style='width:265px')
         |Confirm Pick Up
        script(type='text/javascript').
          $(function() {
          $('input[name="pickupDate"]').daterangepicker({
          singleDatePicker: true,
          timePicker: true,
          timePickerIncrement: 30,
          locale: {
          format: 'MM/DD/YYYY h:mm A'
          }
          });
          });